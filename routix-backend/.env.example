# ====================================
# Routix Platform - Environment Variables Template
# ====================================
# کپی این فایل به .env و مقادیر را تنظیم کنید
# Copy this file to .env and configure the values

# ====================================
# Application Settings
# ====================================
ENVIRONMENT=development
DEBUG=true

# ====================================
# Security (CRITICAL!)
# ====================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================================
# Database
# ====================================
# SQLite (Development)
DATABASE_URL=sqlite:///./routix.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/routix
# Uncomment and configure for production

# ====================================
# AI API Keys
# ====================================
# OpenAI (Required for DALL-E 3 and GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini (Optional - for advanced prompt analysis)
GEMINI_API_KEY=your-gemini-api-key-here

# Stability AI (Optional - for Stable Diffusion)
STABILITY_API_KEY=your-stability-api-key-here

# Midjourney (Not available - using DALL-E 3 Pro instead)
# MIDJOURNEY_API_KEY=not-available

# ====================================
# Cloud Storage (Optional)
# ====================================
# Set to true to use S3, false for local storage
USE_S3=false

# AWS S3 Configuration (if USE_S3=true)
AWS_S3_BUCKET=routix-thumbnails
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ====================================
# Redis (Optional - for caching and Celery)
# ====================================
REDIS_URL=redis://localhost:6379

# ====================================
# File Upload Settings
# ====================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.webp

# ====================================
# Credits & Limits
# ====================================
DEFAULT_CREDITS=10
MAX_GENERATIONS_PER_HOUR=20

# ====================================
# CORS Settings
# ====================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ====================================
# Monitoring (Optional)
# ====================================
# Sentry DSN for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# ====================================
# Payment Gateway (Optional - for future implementation)
# ====================================
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
